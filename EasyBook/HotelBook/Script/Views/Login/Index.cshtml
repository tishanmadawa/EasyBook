@{
    Layout = "~/Views/Shared/_Header.cshtml";
}
@{
    ViewBag.Title = "Index";
}
@using HotelBook.Models
@model Customer

<link href="@Url.Content("~/Styles/Site.css")" rel="stylesheet" />


<div class="row" id="login">
    <div class="col-md-4">

        <p>
            
        </p>
    </div>
    <div class="col-md-4" id="login-form">
        <h3 style="margin-left:40%;">LogIn</h3>
        <div>
            <div>
                @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()


                        <div class="form-group">

                            <div class="col-md-4">
                                @Html.Label("Email", new { @class = "col-md-6", @id = "email" })
                                
                                </div>
                            <div class="col-md-6">                                          
    @Html.TextBoxFor(m => m.email, new { @class = "form-control" })

</div>
                            <div class="col-md-4">
                                <label style="color:red">@Html.DisplayFor(m => m.email)</label>
                                

                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-md-4">
                                @Html.Label("Password   ", new { @class = "col-md-6 " })
                            </div><div class="col-md-6">
                                @Html.PasswordFor(m => m.password, new { @class = "form-control" })
                            </div>
                            <div class="col-md-4">
                                <label>@Html.DisplayFor(m => m.password)</label>


                            </div>
                        </div>
                   
                    <div class="col-md-7">


                        </div>
                        <div class="col-md-2">
                            <input type="submit" value="Submit" class="btn btn-primary" />
                        </div>
                    

                }
                <div class="col-md-12" style="height:50px;">
                    </div>

                </div>
            </div>
    </div>

</div>

