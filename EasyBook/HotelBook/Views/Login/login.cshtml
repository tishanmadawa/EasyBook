
@{
    ViewBag.Title = "login";
}
@using HotelBook.Models
@model Customer
<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>

<link href="@Url.Content("~/Styles/Site.css")" rel="stylesheet" />
<script>

    function validateForm() {
        var email = $('#email').val();
        var password = $('#password').val();
        document.getElementById("emailVal").innerHTML = "";
        document.getElementById("passwordVal").innerHTML = "";
        if (email.length == 0) {
            document.getElementById("emailVal").innerHTML = "Please Enter Email";
            return false;
        } else if (password.length == 0) {
            document.getElementById("passwordVal").innerHTML = "Please Enter Password";
            return false;
        } else {
            return true;
        }



    }
</script>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title = EasyBook</title>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

    <link href="@Url.Content("~/Styles/boostrap.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Styles/Site.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Script/modernizr-2.6.2.js")" language="javascript" type="text/javascript"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.js" language="javascript" type="text/javascript"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js" language="javascript" type="text/javascript"></script>
    <script type="text/javascript" language="javascript" src="@Url.Content("~/Script/jquery.min.js")"></script>
    <script type="text/javascript" language="javascript" src="@Url.Content("~/Script/jquery.Jcrop.js")"></script>
    <script src="@Url.Content("~/Script/jquery.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Script/bootstrap.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Script/jquery.js")" language="javascript" type="text/javascript"></script>
    <script src="@Url.Content("~/Script/boostrap.js")" language="javascript" type="text/javascript"></script>

</head>
<body>
    <div class="row" id="login">
        <div class="col-md-4">

            <p>

            </p>
        </div>
        <div class="col-md-4" id="login-form">
            <h3 style="margin-left:40%;">LogIn</h3>
            <div>
                <div>
                    @using (Html.BeginForm("login", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form", onsubmit = "return validateForm()" }))
                    {
                        @Html.AntiForgeryToken()


                        <div class="form-group">

                            <div class="col-md-4" style="height:50px;">
                                @Html.Label("Email", new { @class = "col-md-6" })

                            </div>
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.email, new { @class = "form-control", @id = "email" })

                            </div>
                            <div class="col-md-12">
                                @Html.ValidationMessageFor(m => m.email, "", new { style = "color:red;", @id = "emailVal" })


                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-md-4" style="height:50px;">
                                @Html.Label("Password   ", new { @class = "col-md-6 " })
                            </div><div class="col-md-6">
                                @Html.PasswordFor(m => m.password, new { @class = "form-control", @id = "password" })
                            </div>
                            <div class="col-md-12">
                                @Html.ValidationMessageFor(m => m.password, "", new { style = "color:red;", @id = "passwordVal" })


                            </div>
                        </div>

                        <div class="col-md-7">


                        </div>
                        <div class="col-md-2">
                            <input type="submit" id="submitId" value="Login" class="btn btn-primary" />
                        </div>


                    }
                    <div class="col-md-12" style="height:50px;">
                    </div>

                </div>
            </div>
        </div>

    </div>
    </body>
</html>