                                    @Html.Label("Hotel Name   ", new { @class = "col-md-6 " })
                                </div><div class="col-md-5" style="height:70px;">
                                    @Html.TextBoxFor(m => m.name, new { @id = "name", @class = "form-control" })
                                </div>
                                <div class="col-md-3" style="height:70px;">
