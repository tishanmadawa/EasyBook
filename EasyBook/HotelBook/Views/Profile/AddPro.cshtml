                                </div><div class="col-md-5" style="height:70px;">
                                    @Html.TextBoxFor(m => m.city, new { @id = "city", @class = "form-control" })
                                </div>
                                <div class="col-md-3" style="height:70px;">
                                    <p id="cityVal" style="color:red"> @Html.ValidationMessageFor(m => m.city, "", new { style = "color:red;", @id = "cityVal" })</p>

                                </div>
                            </div>
                            <div class="form-group">
