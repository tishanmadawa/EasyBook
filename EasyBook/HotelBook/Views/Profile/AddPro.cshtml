                                    @Html.Label("Hotel star rating", new { @class = "col-md-6 " })
                                </div><div class="col-md-5" style="height:70px;">
                                    @Html.TextBoxFor(m => m.rating, new { type = "number", @id = "rating", @class = "form-control" })
                                </div>
                                <div class="col-md-3" style="height:70px;">
