                                    @Html.Label("Hotel Address   ", new { @class = "col-md-6 " })
                                </div><div class="col-md-5" style="height:70px;">
                                    @Html.TextBoxFor(m => m.address, new { @id = "address", @class = "form-control" })
                                </div>
                                <div class="col-md-3" style="height:70px;">
                                    <p id="addressVal" style="color:red">@Html.ValidationMessageFor(m => m.address, "", new { style = "color:red;", @id = "addressVal" })</p>

                                </div>
                            </div>
                            <div class="form-group">
